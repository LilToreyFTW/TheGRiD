# GRiD Discord Bot Configuration
# Environment Variables for Discord Bot
# Copy this file to .env in the project root and fill in your values

# ============================================
# DISCORD BOT CREDENTIALS
# ============================================

# Discord Bot Token (from Discord Developer Portal > Bot section)
DISCORD_BOT_TOKEN=YOUR_DISCORD_BOT_TOKEN_HERE

# Discord Application Client ID (from Discord Developer Portal > General Information)
DISCORD_CLIENT_ID=YOUR_DISCORD_CLIENT_ID_HERE

# Discord Application Client Secret (from Discord Developer Portal > OAuth2 section)
DISCORD_CLIENT_SECRET=YOUR_DISCORD_CLIENT_SECRET_HERE

# Discord Guild/Server ID (right-click server > Copy Server ID with Developer Mode enabled)
DISCORD_GUILD_ID=YOUR_DISCORD_GUILD_ID_HERE

# ============================================
# DISCORD OWNER CONFIGURATION
# ============================================

# Discord Owner User ID (your Discord user ID)
DISCORD_OWNER_ID=YOUR_DISCORD_OWNER_ID_HERE

# ============================================
# GAME WEBHOOK URLS
# ============================================

# Game Chat Webhook URL (for game-chat channel)
GAME_CHAT_WEBHOOK=YOUR_GAME_CHAT_WEBHOOK_URL_HERE

# Game Logs Webhook URL (for game-logs channel)
GAME_LOGS_WEBHOOK=YOUR_GAME_LOGS_WEBHOOK_URL_HERE

# ============================================
# DISCORD SERVER CONFIGURATION
# ============================================

# Discord Server Invite URL
DISCORD_INVITE_URL=https://discord.gg/vxt64amrgt

# ============================================
# BOT CONFIGURATION
# ============================================

# Bot Command Prefix (for text commands, if added)
BOT_PREFIX=!

# Bot Status (online, idle, dnd, invisible)
BOT_STATUS=online

# Bot Activity Type (PLAYING, WATCHING, LISTENING, STREAMING, COMPETING)
BOT_ACTIVITY_TYPE=PLAYING

# Bot Activity Name (what the bot displays as "Playing")
BOT_ACTIVITY_NAME=GRiD - 3D Video Game

# ============================================
# SERVER CONFIGURATION
# ============================================

# Game Server Status (online, offline, maintenance)
SERVER_STATUS=online

# Game Server Name
SERVER_NAME=GRiD Game Server

# ============================================
# OPTIONAL: DATABASE CONFIGURATION
# ============================================
# Uncomment and configure if you want to use a database for persistent storage

# DATABASE_URL=sqlite:./data/grid_bot.db
# DATABASE_TYPE=sqlite
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=grid_bot
# DATABASE_USER=grid_bot_user
# DATABASE_PASSWORD=your_database_password

# ============================================
# OPTIONAL: LOGGING CONFIGURATION
# ============================================

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# Log File Path
LOG_FILE=./logs/bot.log

# Enable Console Logging (true/false)
LOG_CONSOLE=true

# ============================================
# OPTIONAL: API CONFIGURATION
# ============================================
# For future API integrations

# API_PORT=3001
# API_ENABLED=false
# API_HOST=localhost

# ============================================
# OPTIONAL: RATE LIMITING
# ============================================

# Rate Limit Requests Per Minute
RATE_LIMIT_REQUESTS=60

# Rate Limit Window (seconds)
RATE_LIMIT_WINDOW=60

# ============================================
# OPTIONAL: FEATURE FLAGS
# ============================================

# Enable Player Statistics Tracking
ENABLE_PLAYER_STATS=true

# Enable Leaderboard Updates
ENABLE_LEADERBOARD=true

# Enable Achievement Tracking
ENABLE_ACHIEVEMENTS=true

# Enable Planet Tracking
ENABLE_PLANETS=true

# Enable Mod Management
ENABLE_MODS=true

# ============================================
# NOTES
# ============================================
# - Never commit the .env file to version control
# - Keep your bot token and secrets secure
# - Regenerate tokens if they are ever exposed
# - Use environment variables in production
# - The bot will use fallback values if env vars are not set

